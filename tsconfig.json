{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": false,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": ["./src", "./example", "./docs/.vitePress", "./playground"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "./tsconfig.esm.json" },
    { "path": "./playground/tsconfig.json" }
  ]
}
