{
  "compilerOptions": {
    "lib": ["ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "esModuleInterop": true
  },
  "references": [{ "path": "./tsconfig.esm.json" }],
  "include": ["./src", "./example", "./docs/.vitepress"],
  "exclude": [
    "dist",
    "node_modules",
    "./docs/.vitepress/cache",
    "./docs/.vitepress/dist"
  ]
}
