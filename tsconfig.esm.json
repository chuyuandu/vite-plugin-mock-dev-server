{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./example", "./src"],
  "exclude": ["./example/**/*.mjs", "./example/**/*.cjs", "./example/**/*.js"]
}
